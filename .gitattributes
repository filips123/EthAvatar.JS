# Auto detect text files and perform LF normalization
*   text eol=lf
*   text=auto
.*  text eol=lf
.*  text=auto

# Show language aware diffs
*.css   diff=css
*.htm   diff=html
*.html  diff=html

# Declare files that are binary
*.pdf   binary
*.bmp   binary
*.gif   binary
*.ico   binary
*.jpg   binary
*.jpeg  binary
*.png   binary
*.tif   binary
*.tiff  binary
*.wbmp  binary
*.webp  binary
*.mp3   binary
*.ogg   binary
*.mov   binary
*.mp4   binary
*.mpeg  binary
*.webm  binary
*.tar   binary
*.zip   binary

# Declare files that must have CRLF line endings
*.bat   text eol=crlf
*.cmd   text eol=crlf
*.ps1   text eol=crlf

# Exclude unused files in archive
.gitattributes      export-ignore
.gitignore          export-ignore
.editorconfig       export-ignore
.scrutinizer.yml    export-ignore
.travis.yml         export-ignore
.github             export-ignore
test                export-ignore
